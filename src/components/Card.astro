---
const { title, type } = Astro.props;
---

<form id={type} class="module text-white pointer-events-none bg-slate-400 z-20 opacity-0 fixed top-1/2 left-1/2 transition-all -translate-x-1/2 -translate-y-1/2 flex flex-col justify-between items-start w-72 rounded-md p-5 h-fit text-left">
    <h1 class="text-lg font-bold">{title}</h1>

    <svg  data-target=`${type}` xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="modal-close absolute right-5 top-6 w-5 h-5 cursor-pointer">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
    <p class="mt-2 font-semibold">For leaderboards</p>
    <input class="w-full p-2 rounded-sm" placeholder="Name" type="text" name="" id=`${type}-firebase-name`>
    <!-- Country names and Country Code -->
    <select id=`${type}-firebase-region`>
        <option value="">Region</option>
        <option value="AF">Africa</option>
        <option value="AS">Asia</option>
        <option value="AN">Antarctica</option>
        <option value="EU">Europe</option>
        <option value="OC">Oceania</option>
        <option value="NA">North America</option>
        <option value="SA">South America</option>
      </select>

      <p class="mt-2 font-semibold">For Game Data</p>
    <input class="w-full p-2 rounded-sm" placeholder="E-mail" type="email" name="" id=`${type}-firebase-email`>
    <input class="w-full p-2 rounded-sm" placeholder="Create Password" type="password" name="" id=`${type}-firebase-password`>
    <button type="submit" class="py-2 px-4 border-2 border-s-stale-300 rounded-md mt-5">Button</button>
</form>

<style is:inline >

    select {
        padding: 5px;
        color: gray;
        width: 100%;
    }

    .show {
        opacity: 1;
        pointer-events: all;
    }

    input {color: slategrey;
        outline: none;
    }

    .modal {
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }

</style>

<script>

    document.querySelectorAll(".firebase-btn").forEach( (btn) => {
        btn.addEventListener("click", () => {
            document.getElementById(btn.getAttribute("data-target")).classList.add("show")
        })
    })

    document.querySelectorAll(".modal-close").forEach( (btn) => {
        btn.addEventListener("click", () => {
            document.getElementById(btn.getAttribute("data-target")).classList.remove("show")
        })
    })

</script>