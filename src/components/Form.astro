<div id="form" class="w-3/4 m-auto hidden  iitems-center pointer-events-none">
    <form id="login" class="w-4/5 md:w-1/4 module text-white  flex flex-col  p-5 h-fit text-left left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-slate-800 border absolute  border-[#ffffff47] rounded-md">
        <h1 class="text-xl  text-center w-full font-bold">Log In</h1>
        <input autocomplete="off" class="w-full p-2 rounded-sm" placeholder="E-mail" type="email" name="" id="login-firebase-email">
        <input autocomplete="off" class="w-full p-2 rounded-sm" placeholder="Enter Password" type="password" name="" id="login-firebase-password">
        <button type="submit" class="clickr mt-3 m-auto">Log In</button>
        <p class="mt-3 text-center w-full">Don't have an Account? <span class="text-teal-500 cursor-pointer logsign">Create Account</span></p>
        <div id="errorLo" class="absolute left-0 top-full hidden text-center w-full mt-5 bg-slate-800 border p-1 rounded-md border-rose-500">
            <p class="mt-3">User does not exist</p>
        </div>
    </form>

    <form id="signup" class="w-4/5 md:w-1/4 module text-white  flex flex-col justify-between items-start p-5 h-fit text-left left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-slate-800 border absolute  border-[#ffffff47] rounded-md">
        <h1 class="text-xl text-center w-full  font-bold">Sign Up</h1>
        <input autocomplete="off" class="w-full p-2 rounded-sm" placeholder="Name" type="text" name="" id="signup-firebase-name">
        <!-- Country names and Country Code -->
        <select id="signup-firebase-region">
            <option value="">Region</option>
            <option value="AF">Africa</option>
            <option value="AS">Asia</option>
            <option value="AN">Antarctica</option>
            <option value="EU">Europe</option>
            <option value="OC">Oceania</option>
            <option value="NA">North America</option>
            <option value="SA">South America</option>
          </select>
            <input autocomplete="off" class="w-full p-2 rounded-sm" placeholder="E-mail" type="email" name="" id="signup-firebase-email">
        <input autocomplete="off" class="w-full p-2 rounded-sm" placeholder="Create Password" type="password" name="" id="signup-firebase-password">
        <button type="submit" class="clickr mt-5 m-auto">Create Account</button>
        <p class="mt-3 text-center w-full">Already have an Account? <span class="text-teal-500 cursor-pointer logsign">Login</span></p>
        <div id="errorSi" class="absolute left-0 top-full hidden text-center w-full mt-5 bg-slate-800 border p-1 rounded-md border-rose-500">
            <p class="mt-3">User does not exist</p>
        </div>
    </form>
</div>

<style is:inline>

    select {
        padding: 5px;
        width: 100%;
    }

    .show {
        opacity: 1;
        pointer-events: all;
    }

    input {
        color: slategrey;
        outline: none;
        background-color: #1e293b;
        border-bottom:1px solid #ffffff47 ;
    }

    input:focus {
        border-bottom:1px solid turquoise ;

    }

    p{
        color: slategrey;
    }

    select {
        color: slategrey;
        outline: none;
        background-color: #1e293b;
        border-bottom:1px solid #ffffff47 ;
        padding: 10px 10px 10px 0px !important;
    }

    select:focus{
        border-bottom:1px solid turquoise ;


    }

    option {
        color: whitesmoke;
    }

</style>

<script is:inline>
    const LoginForm = document.getElementById('login')
    const SigninForm = document.getElementById('signup')
    const LogSign = document.querySelectorAll('.logsign')
    LogSign.forEach(btn => {
        btn.addEventListener("click", () => {
            SigninForm.classList.toggle("hidden")
        })
    })
</script>
