---
const { price, name, title } = Astro.props;
import "../styles/main.css"
---

<div data-price={ price } class="card pt-5 bg-slate-800 overflow-hidden rounded-md flex flex-col justify-evenly text-center items-center col-span-1 border border-[#ffffff47]">
    <button class={ name }>Button</button>
    <div class="">
        <p class=" mb-2 mt-5">{ title }</p>
        <p class=" mb-2">{ price } Clicks</p>
    </div>
    <div class="flex items-center border-t  border-[#ffffff47] justify-between w-full">
     <button class=" border-l border-[#ffffff47] w-1/2 p-2 hover:bg-slate-900">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-6 h-6 m-auto">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
          </svg>
     </button>
    <button data-price={ price } data-name={ name } class="applyBtn border-l border-[#ffffff47] w-1/2 p-2 hover:bg-slate-900">Apply</button>
     </div>
 </div> 