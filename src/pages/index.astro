---
import Layout from '../layouts/Layout.astro';
import Form from '../components/Form.astro';
import Button from '../components/Button.astro';
---

<Layout title="Clickr">
    <Form />
    <main>
        <div  id="game" class="hidden text-center h-80v flex-col items-center justify-center">
            <button id="clicker" class="clickr py-3 px-10" data-name="clickr">Click Me</button>
            <h1 id="score" class="text-center  mt-2"></h1>
        </div>
        
        <div id="store" class="hidden grid-cols-1 md:grid-cols-4 gap-5 mb-5">
            <h1 class="text-3xl md:col-span-4">Button Store</h1>
            <Button title="Clickr Defaults" name="clickr" price="0"> </Button>
            <Button title="Windows 7" name="win7-btn" price="250"> </Button>
            <Button title="Plastic Toy" name="button-29" price="500"> </Button>
            <Button title="Toon Shaded" name="button-74" price="1000"> </Button>
            <Button title="Chalk Block" name="button-30" price="2500"> </Button>
            <Button title="Cut Cutout" name="dott" price="5000"> </Button>
            <Button title="Calm Amber" name="button-87" price="7500"> </Button>
            <Button title="Alien Pill" name="button-33" price="10000"> </Button>
            <Button title="Galaxy Glow" name="button-63" price="20000"> </Button>
            <Button title="Glitchty Gabe" name="button-49" price="40000"> </Button>
            <Button title="Crunched Paper" name="button-55" price="50000"> </Button>
            <Button title="Tilted Glass" name="button-53" price="60000"> </Button>
            <Button title="This mf glowing fr fr" name="glower" price="70000"> </Button>
            <Button title="Into the Light" name="silvy" price="80000"> </Button>
            <Button title="RTX Container" name="button" price="90000"> </Button>
            <Button title="Kings Click" name="goldy" price="100000"> </Button>
        </div>

        </div>
	</main>
    <script src="../scripts/auth.js"></script>
</Layout>




